@model LoginDTO

@{
	ViewBag.Title = "Login";
}

<div class="main">
	<div id="header">
		<h1 class="registration-header">Login</h1>
	</div>

	<form asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">

		<div>
			<div>
				<label asp-for="Email">Email</label>
			</div>
			<div>
				<input asp-for="Email" placeholder="Email" /> <br />
				<span asp-validation-for="Email"></span>
			</div>
		</div>

		<div>
			<div>
				<label asp-for="Password">Password</label>
			</div>
			<div>
				<input asp-for="Password" placeholder="Password" /> <br />
				<span asp-validation-for="Password"></span>
			</div>
		</div>

		<div>
			<div>
			</div>
			<div>
				<button class="submit-btn" type="submit">Login</button>

				@if (ViewBag.LoginError != null)
				{
					<div class="errors-summary">
						<span>@ViewBag.LoginError</span>
					</div>

					ViewBag.LoginError = null;
				}
			</div>
		</div>

	</form>

	<div id="not-registered-heading">
		<h4>Not yet registered?</h4>
		<a class="login-link" asp-action="Register" asp-controller="Account">Register</a>
	</div>
</div>

@section scripts
	{
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}