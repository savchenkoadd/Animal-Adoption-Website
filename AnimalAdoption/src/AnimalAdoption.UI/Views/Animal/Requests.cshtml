@model List<RequestResponse>

@{
	ViewBag.Title = "Requests";
}

<link rel="stylesheet" href="~/css/Animal/RequestsViewStyles.css">

@if (Model.Count == 0)
{
	<div>
		<h1 class="no-requests-heading">No Requests</h1>
		<p class="no-requests-line">Currently, there are no requests.</p>
	</div>
}
else
{
	@foreach (var request in Model)
	{
		<form method="post">
			<div class="container">
				<div class="request-container">
					<h1>
						Request
					</h1>
				</div>
				<div class="content-container">
					<div class="image-side">
						<img class="image" src="@request.ImageUrl" />
					</div>
					<div class="request-content-side">
						<h1 class="name">@request.Name</h1>
						<h2 class="age-and-breed">@request.Age, @request.Breed</h2>
						<p class="description">@request.Description</p>
					</div>
				</div>
				<div class="buttons-container">
					<button type="submit" class="approve-button" asp-controller="Animal" asp-action="Approve">
						Approve
					</button>
					<button type="submit" class="reject-button" asp-controller="Animal" asp-action="Reject">
						Reject
					</button>
					<input type="hidden" name="Id" value="@request.Id" />

				</div>
			</div>


		</form>
	}
}
